.page {
  padding: 24rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
}

.desc {
  color: #666;
  margin: 12rpx 0 24rpx;
}

.form-item {
  margin-bottom: 18rpx;
  background: #fff;
  padding: 16rpx;
  border-radius: 12rpx;
}

.label {
  display: block;
  color: #333;
  margin-bottom: 8rpx;
}

.picker-value {
  color: #111;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 12rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
}

.status {
  margin-top: 12rpx;
  color: #d46b08;
}
