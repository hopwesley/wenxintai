<view class="page">
  <view class="title">填写基础信息</view>
  <view class="desc">准确的信息帮助我们提供更贴合的测评结果。</view>

  <view class="form-item">
    <text class="label">所在地区</text>
    <picker mode="region" bindchange="onRegionChange">
      <view class="picker-value">{{form.province || '省份'}} {{form.city || '城市'}}</view>
    </picker>
  </view>

  <view class="form-item">
    <text class="label">年级</text>
    <picker range="{{gradeOptions}}" bindchange="onGradeChange">
      <view class="picker-value">{{form.grade || '请选择'}}</view>
    </picker>
  </view>

  <view class="form-item">
    <text class="label">性别</text>
    <picker range="{{genderOptions}}" bindchange="onGenderChange">
      <view class="picker-value">{{form.gender || '请选择'}} </view>
    </picker>
  </view>

  <view class="form-item">
    <text class="label">手机号</text>
    <input placeholder="用于报告通知" value="{{form.phone}}" bindinput="onPhoneInput" />
  </view>

  <view class="form-item">
    <text class="label">兴趣/目标</text>
    <textarea placeholder="输入学习目标或兴趣" value="{{form.interests}}" bindinput="onInterestInput" />
  </view>

  <view class="form-item">
    <text class="label">兴趣标签</text>
    <checkbox-group class="tags" bindchange="onHobbyChange">
      <block wx:for="{{hobbyOptions}}" wx:key="id">
        <label class="tag">
          <checkbox value="{{item.id}}" checked="{{form.hobbies.includes(item.id)}}" />
          <text>{{item.name}}</text>
        </label>
      </block>
    </checkbox-group>
  </view>

  <button type="primary" loading="{{loading}}" bindtap="submitForm">提交并开始答题</button>
  <view wx:if="{{status}}" class="status">{{status}}</view>
</view>
