.page {
  padding: 20rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
}

.status {
  margin: 16rpx 0;
  color: #666;
}

.question-card {
  background: #fff;
  padding: 16rpx;
  border-radius: 12rpx;
  margin: 12rpx 0;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.04);
}

.q-title {
  font-size: 30rpx;
  margin-bottom: 12rpx;
}

.option {
  display: flex;
  align-items: center;
  padding: 8rpx 0;
}

.log-panel {
  margin-top: 16rpx;
  background: #fafafa;
  border-radius: 12rpx;
  padding: 12rpx;
  height: 240rpx;
  box-sizing: border-box;
}

.log-title {
  color: #333;
  margin-bottom: 8rpx;
}

.log-body {
  height: 180rpx;
}

.log-line {
  font-size: 24rpx;
  color: #666;
}
