.page {
  padding: 24rpx;
  background: #f7f7f7;
  min-height: 100vh;
  box-sizing: border-box;
}

.hero {
  margin-bottom: 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
}

.subtitle {
  color: #666;
  display: block;
  margin-top: 8rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.03);
}

.section-title {
  font-size: 28rpx;
  margin-bottom: 16rpx;
  color: #333;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

.list-content {
  margin-left: 12rpx;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 28rpx;
  color: #111;
}

.item-desc {
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  display: inline-flex;
  align-items: center;
  padding: 10rpx 14rpx;
  border-radius: 12rpx;
  background: #f2f5ff;
  color: #2f54eb;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 24rpx;
}

.status {
  margin-top: 16rpx;
  color: #d4380d;
}
