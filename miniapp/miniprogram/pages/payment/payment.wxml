<view class="page">
  <view class="title">支付订单</view>
  <view class="field">
    <input placeholder="输入邀请码" value="{{inviteCode}}" bindinput="onInviteInput" />
    <button size="mini" bindtap="useInvite">使用</button>
  </view>
  <button type="primary" loading="{{paying}}" bindtap="createOrder">发起支付</button>
  <view wx:if="{{status}}" class="status">{{status}}</view>
</view>
