{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "rootDir": "src",       // 因为 main.ts 在 src 根目录
    "outDir": "dist/js",    // 编译到 dist/js
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
